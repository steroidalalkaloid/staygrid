{# templates/roomlisting/_delete_form.html.twig #}
<form method="POST" action="{{ path('app_admin_roomlisting_delete', {'id': room_listing.id}) }}" onsubmit="return confirm('Are you sure you want to delete this Room Listing?');" style="display: inline-block;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ room_listing.id) }}">
    <button class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition">
        Delete
    </button>
</form>